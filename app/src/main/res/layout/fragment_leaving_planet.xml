<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaving_planet_linear_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pict_yellow_activity_background"
    tools:context="ondrej.mejzlik.suntrail.fragments.LeavingPlanetFragment">

    <TextView
        android:id="@+id/leaving_planet_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/leaving_planet_title"
        android:textColor="@color/spacerBlue"
        android:textStyle="bold" />

    <View
        android:id="@+id/leaving_planet_view_spacer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="48dp"
        android:background="@color/spacerBlue"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/leaving_planet_image_view_warning"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/start_new_game_image_description"
            android:scaleType="fitCenter"
            android:src="@drawable/pict_warning" />

        <TextView
            android:id="@+id/leaving_planet_text_view_warning_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaving_planet_warning"
            android:textAlignment="center"
            android:textColor="@color/textRed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leaving_planet_text_view_warning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/leaving_planet_warning_text"
            android:textAlignment="center"
            android:textColor="@color/textBlack" />

        <LinearLayout
            android:id="@+id/leaving_planet_linear_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/leaving_planet_button_stay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="leaveFragmentStayButtonHandler"
                    android:text="@string/leaving_planet_button_name_stay"
                    android:textColor="@color/textBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/leaving_planet_button_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="leaveFragmentLeaveButtonHandler"
                    android:text="@string/leaving_planet_button_name_leave"
                    android:textColor="@color/textBlack" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
