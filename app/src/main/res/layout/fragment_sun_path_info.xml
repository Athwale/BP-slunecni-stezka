<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sun_path_info_fragment_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_activity_background"
    tools:context="ondrej.mejzlik.suntrail.fragments.SunPathInfoFragment">

    <TextView
        android:id="@+id/sun_path_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/info_screen_title"
        android:textColor="#ff0099cc"
        android:textStyle="bold" />

    <View
        android:id="@+id/sun_path_info_view_spacer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48dp"
        android:background="#ff0099cc"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ScrollView
        android:id="@+id/sun_path_info_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sun_path_info_view_spacer"
        android:layout_centerHorizontal="true"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sun_path_info_text_view_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:linksClickable="true"
                android:textColor="#000000"
                tools:text="TextView" />

            <Button
                android:id="@+id/sun_path_info_button_map"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/yellow_button_background"
                android:drawableTop="@drawable/ic_menu_map"
                android:onClick="mapButtonHandler"
                android:text="@string/info_screen_map_button"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sun_path_info_text_view_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:paddingTop="15dp"
                android:textColor="#000000"
                tools:text="TextView" />

            <Button
                android:id="@+id/sun_path_info_button_all_boards"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_button_background"
                android:drawableTop="@drawable/ic_menu_all_boards"
                android:onClick="allBoardsButtonHandlerInfoScreen"
                android:text="@string/main_menu_all_boards_icon_text"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sun_path_info_text_view_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:paddingTop="15dp"
                android:textColor="#000000"
                tools:text="TextView" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
