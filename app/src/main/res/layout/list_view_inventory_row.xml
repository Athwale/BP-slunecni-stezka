<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_inventory_row_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_image_view_item"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:contentDescription="@string/item_image_description"
        android:scaleType="fitCenter"
        tools:src="@drawable/pict_a_crate_of_communication_devices" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:text="Communication devices" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_item_size_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/list_size"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/row_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textStyle="italic"
                tools:text=" 11" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/row_image_view_price_movement"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/item_image_description"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:scaleType="fitEnd"
        tools:src="@drawable/pict_arrow_green" />

</LinearLayout>