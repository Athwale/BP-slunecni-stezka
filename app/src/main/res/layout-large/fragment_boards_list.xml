<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_boards_fragment_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_activity_background"
    tools:context="ondrej.mejzlik.suntrail.Fragments.BoardsListFragment">

    <TextView
        android:id="@+id/all_boards_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/all_boards_screen_title"
        android:textColor="#ff0099cc"
        android:textStyle="bold" />

    <View
        android:id="@+id/all_boards_view_spacer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48dp"
        android:background="#ff0099cc"
        tools:ignore="UnknownId,UnknownIdInLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal">

            <TableRow>

                <Button
                    android:id="@+id/all_boards_button_sun"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_sun"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_mercury"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_mercury"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_venus"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_venus"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/all_boards_button_earth"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_earth"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_moon"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_moon"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_mars"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_mars"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/all_boards_button_ceres"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_ceres"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_jupiter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_jupiter"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_halley"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_halley"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:paddingBottom="16dp">

                <Button
                    android:id="@+id/all_boards_button_saturn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_saturn"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_uranus"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_uranus"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/all_boards_button_neptune"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_button_background"
                    android:drawableTop="@drawable/ic_planet"
                    android:text="@string/all_boards_button_name_neptune"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>
